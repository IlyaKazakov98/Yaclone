<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.choselang.ChoseLangFragment">

    <include
            android:id="@+id/toolbarChoseLang"
            layout="@layout/toolbar"
            app:layout_constraintTop_toTopOf="@+id/searchLang"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <EditText
            android:id="@+id/searchLang"
            android:layout_width="match_parent"
            android:drawableStart="@drawable/ic_search_black_24dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbarChoseLang" android:layout_marginTop="@dimen/base_margin"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            tools:text="Английский" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewChoseLang"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/searchLang" android:layout_marginTop="@dimen/base_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_chose_language"/>

    <include
            android:id="@+id/progressBar"
            layout="@layout/progress_bar"
            android:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>